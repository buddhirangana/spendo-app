<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OnboardingActivity">

    <!-- Top Section with Green Background -->
    <LinearLayout
        android:id="@+id/layout_top_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#6EDE8A"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Piggy Bank Image -->
        <ImageView
            android:id="@+id/iv_piggy_bank"
            android:layout_width="480dp"
            android:layout_height="480dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/piggy_bank" />
    </LinearLayout>

    <!-- Bottom Section with White Background -->
    <LinearLayout
        android:id="@+id/layout_bottom_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="32dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_top_section">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Spend Smarter"
            android:textColor="@color/primary_green"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Save More"
            android:textColor="@color/primary_green"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/raleway"
            android:text="Become your own money manager"
            android:textColor="@color/primary_gray"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/raleway"
            android:text="and make every cent count"
            android:textColor="@color/primary_gray"
            android:textSize="17sp" />

        <!-- Get Started Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_started"
            android:layout_width="280dp"
            android:layout_height="59dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_green"
            app:cornerRadius="40dp" />

        <!-- Login Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_login_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:text="Already have an account? "
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:text="Login"
                android:textColor="@color/primary_green"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
